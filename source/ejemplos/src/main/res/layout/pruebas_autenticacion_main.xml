<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ar.uba.fi.pruebasutilidadesdane.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pruebas Autenticación" />

    <Button
        android:id="@+id/set_pin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETEAR PIN ADMIN" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGUEAR ADMIN" />

    <Button
        android:id="@+id/ejecutar_sin_loguear_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EJECUTAR COMO ADMIN (SIN LOGUEO)" />

    <Button
        android:id="@+id/ejecutar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EJECUTAR COMO ADMIN (CON LOGUEO)" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CERRAR SESIÓN ADMIN" />
</LinearLayout>
